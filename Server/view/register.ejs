<style>
  body {
    background: url(img/coffee-laptop-bg-img.jpg) no-repeat;
    background-size: cover;
    background-position: center center;
    background-attachment: fixed; 
  }
</style>

<%if(success===false){%> <%=msg%> <%}%>

<div class="login-box">
  <div class="login-container">
    <form class="login-form" method="POST" action="/register">
      <h1 style="font-family: 'Allura', cursive;">Registration</h1>
      <div class="text-box one">
        <div class="login-i">
          <i class="fa fa-id-card"></i>
        </div>
        <div>
          <h5>Full Name</h5>
          <input class="input" type="fullname" name="fullname" />
        </div>
      </div>

      <div class="text-box one">
        <div class="login-i">
          <i class="fa fa-user"></i>
        </div>
        <div>
          <h5>Username</h5>
          <input class="input" type="username" name="username" />
        </div>
      </div>

      <div class="text-box one">
        <div class="login-i">
          <i class="fa fa-home"></i>
        </div>
        <div>
          <h5>Address</h5>
          <input class="input" type="address" name="address" />
        </div>
      </div>

      <div class="text-box one">
        <div class="login-i">
          <i class="fa fa-mobile"></i>
        </div>
        <div>
          <h5>Phone Number</h5>
          <input class="input" type="text" name="phoneNumber" />
        </div>
      </div>

      <div class="text-box one">
        <div class="login-i">
          <i class="fa fa-envelope"></i>
        </div>
        <div>
          <h5>Email</h5>
          <input class="input" type="email" name="email" />
        </div>
      </div>

      <div class="text-box two">
        <div class="login-i">
          <i class="fa fa-lock"></i>
        </div>
        <div>
          <h5>Password</h5>
          <input class="input" type="password" name="password" />
        </div>
      </div>
      <input class="login-btn" type="submit" value="Signup" />
    </form>
  </div>
</div>

<script src="javascript/login-effect.js"></script>
