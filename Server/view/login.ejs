  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css" />
  <title>Beanie Beanie</title>

  <style>
    body {
      background: url(img/dark-bg.jpg) no-repeat;
      background-size: cover;
      background-position: center center;
      background-attachment: fixed;
      width: 100%;
      height: 100%;
    }
  </style>
</head>

<body>
  <div class="login-box">
    <div class="login-container">
      <form class="login-form" method="POST" action="/login">
        <h1 style="font-family: 'Allura', cursive;">Welcome</h1>
        <div class="text-box one">
          <div class="login-i">
            <i class="fa fa-user"></i>
          </div>
          <div>
            <h5>Username</h5>
            <input class="input" type="username" name="username" />
          </div>
        </div>

        <div class="text-box two">
          <div class="login-i">
            <i class="fa fa-lock"></i>
          </div>
          <div>
            <h5>Password</h5>
            <input class="input" type="password" name="password" />
          </div>
        </div>
        <p><%if(success===false){%> <%=msg%> <%}%></p>
          <input class="login-btn" type="submit" value="Login" />
        </form>
      </div>
      <div class="direct-link">
        <a href="/register">Create an account now</a>
        <a href="/">Back to <i class="fas fa-home"></i></a>
      </div>
    </div>
  </body>
</html>

