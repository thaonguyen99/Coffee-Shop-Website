<%-include("partials/header")-%> <%# CONTENT GOES HERE %>



<div class="container text-center">
  <%if(listProduct && listProduct.length>0){%>
  <h1 id="cart-head" style="text-transform: uppercase; letter-spacing: 3px;">
    Order detail
  </h1>
  <div class="row">
    <div class="col-lg-12">
      <!-- Cart Elements -->
      <div class="cartElements">
        <div class="row">
          <div class="col-2"></div>
          <div class="col-2">
            <p class="c-title">Name</p>
          </div>
          <div class="col-2">
            <p class="c-title">Size</p>
          </div>
          <div class="col-2">
            <p class="c-title">Price</p>
          </div>
          <div class="col-2">
            <p class="c-title">Amount</p>
          </div>
          <div class="col-2">
            <p class="c-title">Subtotal</p>
          </div>

          <div class="col-2"></div>
        </div>

        <!-- For each cart element -->

        <form action="/checkout" method="post">
          <%listProduct.forEach(item =>{%>
          <div class="row">
            <div class="col-2">
              <img class="cartImg" src="<%=item.product.photo%>" />
            </div>
            <div class="col-2">
              <p><%=item.product.name%></p>
            </div>
            <div class="col-2">
              <p><%=item.size%></p>
            </div>
            <div class="col-2">
              <p><%=item.product.price%></p>
            </div>
            <div class="col-2">
              <p><%=item.amount%></p>
            </div>
            <div class="col-2">
              <p><%=totalPrice%></p>
            </div>
          </div>
          <%})%>

          <div class="row">
            <div class="col-6"></div>
            <div class="col-2">
              <p class="c-title">Shipping Fee: 15000</p>
            </div>
            <div class="col-2">
              <p class="c-title">Total</p>
            </div>
            <div class="col-2">
              <p><%=totalPrice+15000%></p>
            </div>
            <div class="col-2"></div>
          </div>
      </div>
    </div>
  </div>

  <button class="button btn btn-lg btn-outline-dark checkout">Order!</button>
  </form>
  <%}%> 
<%if(orders && orders.length>0){%>

  <h1 id="cart-history" style="text-transform: uppercase; letter-spacing: 3px;">
    Order History
  </h1>
  <%final.forEach(order=>{%>
  <span class="day">Date: <%=order.orders.orderDate%> </span>

  <div class="row">
    <div class="col-lg-12">
      <!-- Cart Elements -->
      <div class="cartElements">
        <div class="row">
          <div class="col-2"></div>
          <div class="col-2">
            <p class="c-title">Name</p>
          </div>
          <div class="col-2">
            <p class="c-title">Size</p>
          </div>
          <div class="col-2">
            <p class="c-title">Price</p>
          </div>
          <div class="col-2">
            <p class="c-title">Amount</p>
          </div>

          <div class="col-2"></div>
        </div>

        <!-- For each cart element -->
        <%order.list.forEach(item=>{%>
        <div class="row">
          <div class="col-2">
            <img class="cartImg" src="<%=item.pro.photo%>" />
          </div>
          <div class="col-2">
            <p><%=item.pro.name%></p>
          </div>
          <div class="col-2">
            <p><%=item.size%></p>
          </div>
          <div class="col-2">
            <p><%=item.pro.price%></p>
          </div>
          <div class="col-2">
            <p><%=item.amount%></p>
          </div>
        </div>
        <%})%>
        <div class="row">
          <div class="col-6"></div>
          <div class="col-2">
            <p class="c-title">Shipping Fee: 15000</p>
          </div>
          <div class="col-2">
            <p class="c-title">Total</p>
          </div>
          <div class="col-2">
            <p><%=order.orders.total+15000%></p>
          </div>
          <div class="col-2"></div>
        </div>
      </div>
    </div>
  </div>

  <%})%>
  <%}%>
  
  <div class="thank">
    <h1>
      Thank you for choosing Beanie Beanie <i class="far fa-grin-hearts"></i>
    </h1>
    <div class="row">
      <a href="product">Click here to order more <i class="fas fa-store"></i></a>
    </div>
  </div>
</div>

<%-include ("partials/footer")-%>