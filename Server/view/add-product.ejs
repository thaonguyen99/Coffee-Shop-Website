<%-include("partials/adminHeader")-%>
<div class="main-container">
  <div class="item item-add container text-center">
    <form action="/admin/add-product" method="post" enctype="multipart/form-data">
      <h1 style="margin: 30px; line-height:1.5; letter-spacing: 1px; ">ADD NEW PRODUCT</h1>
      <div class="row form-group ">
        <div class="col-sm-3 col-form-label-lg">
          <p>Name</p>
        </div>
        <div class="col-8">
          <input class="form-control" type="text" name="name" size="100" />
        </div>
      </div>
      <div class="row form-group ">
        <div class="col-sm-3 col-form-label-lg">
          <p>Category</p>
        </div>
        <div class="col-8">
          <div class="row">
            <div class=" col-sm-4 form-check">
              <input id="coffee" class="form-check-input" type="radio" name="category" value="Coffee" />
              <label class="form-check-label" for="coffee">Coffee</label>
            </div>
            <div class=" col-sm-4 form-check">
              <input id="tea" class="form-check-input" type="radio" name="category" value="Tea" />
              <label class="form-check-label" for="tea">Tea</label>
            </div>
            <div class=" col-sm-4 form-check">
              <input id="pastry" class="form-check-input" type="radio" name="category" value="Pastry" />
              <label class="form-check-label" for="pastry">Pastry</label>
            </div>
          </div>
        </div>
      </div>
      <div class="row form-group ">
        <div class="col-sm-3 col-form-label-lg">
          <p>Description</p>
        </div>
        <div class="col-8">
          <input class="form-control" type="text" name="description" size="100" />
        </div>
      </div>
      <div class="row form-group ">
        <div class="col-sm-3 col-form-label-lg">
          <p>Price</p>
        </div>
        <div class="col-8">
          <input class="form-control" type="text" name="price" size="100" />
        </div>
      </div>
      <div class="row form-group ">
        <div class="col-sm-3 col-form-label-lg">
          <p>Photo</p>
        </div>
        <div class="col-8">
          <input type="file" name="photo" />
        </div>
      </div>

      <button class="button btn-lg btn-outline-dark checkout">Add</button>
    </form>
  </div>

</div>



<%-include("partials/adminFooter")-%>
