<%-include("partials/header")-%>

<%# CONTENT GOES HERE %>

<h1 id="cart-head" style="text-transform: uppercase; letter-spacing: 3px; ">Cart Information</h1>
<div class="container text-center">
  <div class="row">
    <div class="col-md-8 ">


      <!-- Cart Elements -->
      <div class="cartElements" id="cart">


        <div class="row">
          <div class="col-2 ">

          </div>
          <div class="col-2 ">
            <p class="c-title">Name</p>
          </div>
          <div class="col-2">
            <p class="c-title">Size</p>
          </div>
          <div class="col-2 ">
            <p class="c-title">Price</p>
          </div>
          <div class="col-2 ">
            <p class="c-title">Amount</p>
          </div>

          <div class="col-2">
            <form action="cart?_method=PATCH" method="POST"></form>
            <button><i class="fas fa-backspace"></i></button>
            </form>
          </div>
        </div>

        <!-- For each cart element -->
        <%const products= data.listProduct;%>
        <%products.forEach(item => {%>
        <div class="row" id="tr<%=item.product._id%>">
          <div class="col-2">
            <img class="cartImg" src="<%=item.product.photo%>" alt="">
          </div>
          <div class="col-2">
            <p><%=item.product.name%></p>
          </div>
          <div class="col-2">
            <p><%=item.product.size%></p>
          </div>
          <div class=" col-2">
            <p><%=item.product.price%></p>
          </div>
          <div class="col-2">
            <input type="number" name="amount" min="1" value="<%=item.amount%>" size="10"
              data-id="<%=item.product._id%>" class="amount">

          </div>

          <div class="col-2">
            <button data-id="<%=item.product._id%>" class="delete-button"><i class="fa fa-trash"> </i></button>
          </div>
        </div>
        <%})%>


        <div class="row">

          <div class="col-6 ">

          </div>
          <div class="col-2">
            <p class="c-title">Subtotal</p>
          </div>
          <div class="col-2">
            <p id="subtotal1"><%=data.totalPrice%></p>
          </div>
        </div>

      </div>
    </div>

    <!-- Cart Total -->
    <div class="col-md-4">
      <div class="cartTotal">
        <div class="row">
        </div>
        <div class="row">
          <div class="col-6">
            <h5>Subtotal</h5>
          </div>
          <div class="col-6">
            <h5 id=subtotal2><%=data.totalPrice%></h5>
          </div>
        </div>
        <hr class="my-4">
        <div class="row">
          <div class="col-6">
            <h5>Tax </h5>
          </div>
          <div class="col-6">
            <h5>5%</h5>
          </div>
        </div>
        <div class="row">
          <div class="col-6">
            <h5>Shipping Fee</h5>
          </div>
          <div class="col-6">
            <h5>15000</h5>
          </div>
        </div>
        <hr class="my-4">




      </div>
    </div>
  </div>

  <div class="container-fluid ">

  </div>
  <hr class="my-4">

  <div class="shippingInfo">
    <h1 style="text-transform: uppercase; letter-spacing: 1px;">Shipping Information</h1>
    <form class="" action="#" method="post">
      <div class="form-group row ">
        <div class="col-sm-4 ">
          <label for="name" class="col-form-label-lg">Customer Name </label>
        </div>
        <div class="col-sm-8">
          <input class="form-control" type="text" name="cusName" id="name" value="<%=user.fullname%>">
        </div>
      </div>

      <div class="form-group row ">
        <div class="col-sm-4 ">
          <label for="contact" class="col-form-label-lg">Contact </label>

        </div>
        <div class="col-sm-8">
          <input class="form-control" type="tel" name="contact" id="contact" value="<%=user.phoneNumber%>">
        </div>
      </div>

      <div class="form-group row ">
        <div class="col-sm-4 ">
          <label for="email" class="col-form-label-lg">Email </label>

        </div>
        <div class="col-sm-8">
          <input class="form-control" type="email" name="email" id="email" value="<%=user.email%>">
        </div>
      </div>

      <div class="form-group row ">
        <div class="col-sm-4 ">
          <label for="address" class="col-form-label-lg">Address </label>

        </div>
        <div class="col-sm-8">
          <input class="form-control" type="address" name="address" id="address" value="<%=user.address%>">
        </div>
      </div>
      <div class="row c-checkout">
        <div class="col-md-2"></div>
        <div class="col-md-4">
          <a href="/product" class="button btn btn-lg btn-outline-dark checkout"><span><i
                class="fa fa-angle-double-left"></i></span>Continue
            Shopping</a>
        </div>
        <div class="col-md-4">
          <a href="/checkout" class="button btn btn-lg btn-outline-dark checkout">
            Checkout<span><i class="fa fa-arrow-circle-right"></i></span></a>
        </div>
        <div class="col-md-2"></div>
      </div>

    </form>
  </div>
</div>

<%-include ("partials/footer")-%>